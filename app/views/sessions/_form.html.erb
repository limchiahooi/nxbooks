<div id = "error-field" class="alert-danger" ></div>
<br>


<div class="text-field">
   <%= form.label :email, "Email: ", style: "width: 80px" %>
   <%= form.text_field :email, type: 'email' %>
</div>
<br>
<div class="password-field">
   <%= form.label :password, "Password: ", style: "width: 80px" %>
   <%= form.password_field :password %>
</div>
<br>
<div class="submit-field">
   <%= form.submit "Sign in", class: "btn btn-success" %>
</div>
<br>
<div class="other-links">
   
   <%= link_to "New to Nxbooks? Sign up for a free acount now!", sign_up_path, 'data-turbolinks' => false %>
   
   <br>
   
</div>


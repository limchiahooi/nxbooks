

<div class='container-fluid' style="min-height: 100%">
   <div class="col-md-8 col-md-offset-2">
      <li class="list-group-item">
         <h1><%= @listing.title %></h1>
         <br>

        



         <br>
         <p><b>Author(s): </b><%= @listing.author %></p>
         <p><b>Publisher: </b><%= @listing.publisher %></p>
         <p><b>Review: </b><div class="well"><%= simple_format(@listing.review) %></div></p>
         <p><b>Shared by: </b><%= link_to @listing.user.name, user_path(@listing.user) %></p>
         <br> 
         <p><b>Photos: </b>
            <% if @listing.image.present? %>
            There are <%= @listing.image.count %> photos for this review. 
         </p>
         <div style="height: 480px !important;">
            <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="3000">
               <!-- Indicators -->
               <ol class="carousel-indicators">
                  <li data-target="#myCarousel" data-slide-to="0" class= "active" ></li>
                  <% (1..@listing.image.count - 1).each do |i| %>
                  <li data-target="#myCarousel" data-slide-to=<%=i.to_s%>></li>
                  <% end %>
               </ol>
               <!-- Wrapper for slides -->
               <div class="carousel-inner" style=" width:100%; height: 500px !important;">
                  <div class="item active">
                     <%= image_tag @listing.image.first, class: "img-responsive center-block", style: "" %>
                  </div>
                  <% @listing.image[1..-1].each do |image| %>
                  <div class="item">
                     <%= image_tag image, class: "img-responsive center-block", style: "" %>
                  </div>
                  <% end %>
               </div>
               <!-- Left and right controls -->
               <a class="left carousel-control" href="#myCarousel" data-slide="prev">
               <span class="glyphicon glyphicon-chevron-left"></span>
               <span class="sr-only">Previous</span>
               </a>
               <a class="right carousel-control" href="#myCarousel" data-slide="next">
               <span class="glyphicon glyphicon-chevron-right"></span>
               <span class="sr-only">Next</span>
               </a>
            </div>
         </div>
         <br>
         
         <% else %>
         There is no photo for this review yet.</p>
         <% end %>
         <br>


         <% if signed_in? %>                    
            <% if current_user && ((current_user.id == @listing.user.id) || current_user.admin?) %>
            <div class="submit-field">
               <div style="float: left;margin-right: 15px;">
                  <%= link_to 'Edit review', edit_user_listing_path(current_user, @listing), class: "btn btn-primary" %>
               </div>
         
               <div><%= link_to 'Delete review', user_listing_path(current_user, @listing), method: :delete, data: {confirm: 'Are you sure you want to delete this review?'}, class: "btn btn-primary" %>
               </div>
            <% end %>         
         <% end %>

         <hr>



         

         <h3>Comments</h3>
         <% if @listing.comment.count != 0 %>
         <p>As at <%= Date.today.strftime("%d %B %Y") %>, this book review has <%= @listing.comment_count %> comments.</p>


               <% if signed_in? %>

               <%= link_to "Write a comment", new_listing_comment_path(@listing), id: "new_link", remote: true, class: "btn btn-primary"  %>           
                  <br><br>
                  <% end %>


<div class="table-responsive">
<div id="link_table">
<table class="table table-bordered" style="text-align: center;background-color: #f2f2f2;">
<thead>   
<tr>
<td>Posted at</td>
<td>Comment</td>
<td>By</td>
<td>Delete</td>
</tr>
</thead>

<tbody>
<% @comments.each do |comment| %>
<tr id="delete_<%= comment.id %>">
<td><%= comment.updated_at.to_s  %></td>
<td><%= comment.content %></td>
<td><%= link_to comment.user.name, user_path(comment.user)  %></td>
<td><% if signed_in? %>                    
            <% if current_user && ((current_user.id == comment.user_id) || current_user.admin?) %><%= link_to "Delete", comment, method: :delete, data: { confirm: "Are you sure you want to delete this comment?" }, remote: true %>
            <% end %>
            <% end %></td>
</tr><% end %>
</tbody>
</table>
</div>



<% else %>
        <p> There is no comment for this review yet.</p>
         <% end %>












      </li>




      <br>
      <div class="other-links">
         <%= link_to '<< Back to Main page', root_path %>
      </div>
      <br>
   </div>
</div>




<div class='container-fluid' style="min-height: 100%">
   <div class="col-md-8 col-md-offset-2">
      <li class="list-group-item">
         <h1><%= @listing.title %></h1>
         <br>

         <% if false %>
          <div class="well", style="float: right; max-width: 350px;">
            <%= render "reservations/form" %>           
            </div>
            <% end %>



         <br>
         <p>Authors: <%= @listing.author %></p>
         <p>Publisher: <%= @listing.publisher %></p>
         <p>Review: <%= @listing.review %></p>
         <p>Shared by: <%= link_to @listing.user.name, user_path(@listing.user) %></p>
         <br> 
         <p>Photos: 
            <% if @listing.image.present? %>
            There are <%= @listing.image.count %> photos for this review. 
         </p>
         <div style="min-width: 25%; max-width: 360px">
            <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="3000">
               <!-- Indicators -->
               <ol class="carousel-indicators">
                  <li data-target="#myCarousel" data-slide-to="0" class= "active" ></li>
                  <% (1..@listing.image.count - 1).each do |i| %>
                  <li data-target="#myCarousel" data-slide-to=<%=i.to_s%>></li>
                  <% end %>
               </ol>
               <!-- Wrapper for slides -->
               <div class="carousel-inner">
                  <div class="item active">
                     <%= image_tag @listing.image.first, class: "img-responsive center-block", style: "width:100%; height:100%;" %>
                  </div>
                  <% @listing.image[1..-1].each do |image| %>
                  <div class="item">
                     <%= image_tag image, class: "img-responsive center-block", style: "width:100%; height:100%;" %>
                  </div>
                  <% end %>
               </div>
               <!-- Left and right controls -->
               <a class="left carousel-control" href="#myCarousel" data-slide="prev">
               <span class="glyphicon glyphicon-chevron-left"></span>
               <span class="sr-only">Previous</span>
               </a>
               <a class="right carousel-control" href="#myCarousel" data-slide="next">
               <span class="glyphicon glyphicon-chevron-right"></span>
               <span class="sr-only">Next</span>
               </a>
            </div>
         </div>
         <br><br>
         
         <% else %>
         There is no photo for this listing yet.</p>
         <% end %>
         <br>
         <p><% if signed_in? %>
            <% if current_user && ((current_user.id == @listing.user.id) || current_user.admin?) %>
            <%= link_to 'Edit review', edit_user_listing_path(current_user, @listing), class: "btn btn-primary" %>
         </p>
         <p><%= link_to 'Delete review', user_listing_path(current_user, @listing), method: :delete, data: {confirm: 'Are you sure you want to delete this review?'}, class: "btn btn-primary" %>
            <% end %>
         </p>
         <% end %>
      </li>
      <br>
      <div class="other-links">
         <%= link_to '<< Back to Main page', root_path %>
      </div>
      <br>
   </div>
</div>


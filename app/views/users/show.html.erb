

<div class='container-fluid' style="min-height: 100%">
   <div class="col-md-8 col-md-offset-2" >
      <div class="list-group">
         <div class="list-group-item">
            <h3><%= @user.name %></h3>            
            <p>Bio: <%= @user.bio %>
            <p>Profile photo: 
               <% if @user.avatar.file.nil? %>
               No profile photo available.
            </p>
               <% else %>
               <br>
               <%= image_tag @user.avatar, Style: "width: 200px; height: 200px;" %>
               <% end %>
            </p>
            <br>
            
            <p><% if signed_in? %>
               <% if current_user && ((current_user.id == @user.id) || current_user.admin?) %>
               <%= link_to 'Edit profile', edit_user_path(current_user), class: "btn btn-primary", 'data-turbolinks' => false %>
            </p>
               <% end %>
            </p>
               <% end %>
            <br>

            <hr>

            <h3>My Book Reviews</h3>

            <p>As at <%= Date.today.strftime("%d %B %Y") %>, you have created <%= @user.listing_count %> book reviews.</p>




   
         <% @listings.each do |listing| %>
            <div class="well"><center>
            
               <h4><%= link_to listing.title, listing_path(listing) %></h4>

                  <p> <% if listing.image? %>
                        <%= image_tag listing.image[0].to_s, class: "img-responsive", style: "border-radius: 3px; " %><% else %><p><%= image_tag("http://placehold.it/360x480&text=no%20image", class: "img-responsive") %><% end %></p>

                  
                  <p>Authors: <%= listing.author%></p>
                  </center></div>
         <% end %>





         </div>


      </div>


      <div class="other-links">
             <%= link_to '<< Back to Main page', root_path %>
      </div>
   </div>
</div>
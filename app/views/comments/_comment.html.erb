<tr id="delete_<%= comment.id %>">
	<td><%= comment.updated_at.to_s  %></td>
	<td><%= comment.content %></td>
	<td><%= link_to comment.user.name, user_path(comment.user)  %></td>
	<td>
		<% if signed_in? %>                    
	        <% if current_user && ((current_user.id == comment.user_id) || current_user.admin?) %>
	        	<%= link_to "Delete", comment, method: :delete, data: { confirm: "Are you sure you want to delete this comment?" }, remote: true %>
	        <% end %>
	    <% end %>	
	</td>
</tr>